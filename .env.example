# Copy to .env and replace placeholder values before running docker compose.
SPRING_PROFILES_ACTIVE=prod

# Neo4j connectivity
NEO4J_URI=bolt://neo4j:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=REPLACE_WITH_NEO4J_PASSWORD

# Required backend API users (no defaults)
JDEPLOY_INGEST_USER=ingest-service
JDEPLOY_INGEST_PASSWORD=REPLACE_WITH_STRONG_INGEST_PASSWORD
JDEPLOY_GENERATOR_USER=generator-service
JDEPLOY_GENERATOR_PASSWORD=REPLACE_WITH_STRONG_GENERATOR_PASSWORD
JDEPLOY_READER_USER=reader-service
JDEPLOY_READER_PASSWORD=REPLACE_WITH_STRONG_READER_PASSWORD

# Optional hardening controls (defaults shown)
JDEPLOY_SECURITY_PASSWORD_POLICY_ENFORCE=true
JDEPLOY_SECURITY_PASSWORD_POLICY_MIN_LENGTH=12
JDEPLOY_SECURITY_PASSWORD_POLICY_MIN_CHARACTER_CLASSES=3
